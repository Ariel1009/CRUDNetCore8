@model P_CRUDNetCore.Models.Contact
@{
    ViewData["Title"] = "Detalle del Contacto";
}

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card accordion-header bg-dark">
                <h3 class="text-white text-center"><strong>Editar Usuarios</strong></h3>
            </div>
            <div class="card-body">

                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m=> m.Name)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Telefono: </strong>@Html.DisplayFor(m => m.Telefono)</li>
                    <li class="list-group-item"><strong>Fecha de alta: </strong>@Html.DisplayFor(m => m.FechaCreacion)</li>

                </ul>

                <br />

                <a asp-controller="Home" asp-action="Index"> Volver</a>

            </div>
        </div>
    </div>
</div>
