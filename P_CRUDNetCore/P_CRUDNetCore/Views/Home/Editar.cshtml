@model P_CRUDNetCore.Models.Contact
@{
    ViewData["Title"] = "Editar Contacto";
}

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card accordion-header bg-dark">
                <h3 class="text-white text-center"><strong>Editar Usuarios</strong></h3>
            </div>
            <div class="card-body">

                <form asp-action="Editar" method="post">

                    <input type="hidden" asp-for="Id"/>

                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa su email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingresa su telefono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto">
                            <i class='bx bxs-user-plus'></i> Editar usuario
                        </button>
                    </div>
                </form>

                <a asp-controller="Home" asp-action="Index">Volver</a>

            </div>
        </div>
    </div>
</div>
